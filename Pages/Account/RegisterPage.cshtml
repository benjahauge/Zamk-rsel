@page
@model Zamkørsel.Pages.View.RegisterPageModel
@{

}

<h1>Registration of the user</h1>
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="  ModelOnly  " class="text-danger">
			</div>
			<div class="form-group">
				<label asp-for="@Model.Registration.Email" class="control-label"></label>
				<input asp-for="@Model.Registration.Email" class="form-control" />
				<span asp-validation-for="@Model.Registration.Email" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="@Model.Registration.Password" class="control-label"></label>
				<input asp-for="@Model.Registration.Password" class="form-control" />
				<span asp-validation-for="@Model.Registration.Password" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="@Model.Registration.ConfirmPassword" class="control-label"></label>
				<input asp-for="@Model.Registration.ConfirmPassword" class="form-control" />
				<span asp-validation-for="@Model.Registration.ConfirmPassword" class="text-danger"></span>
			</div>

			<div class="form-group">
				<input type="submit" value="Register" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>